@model PracticaS12.Models.ViewModels.CompraCreateViewModel
@{
    ViewBag.Title = "Nueva Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card card-intense">
            <div class="card-header d-flex align-items-center gap-2">
                <i class="bi bi-bag-plus"></i>
                <h5 class="m-0">Registrar nueva compra</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Compras", FormMethod.Post, new { @id = "frmCompra", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Descripcion, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", placeholder = "Ej: Producto X" })
                        @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Precio, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            @Html.TextBoxFor(m => m.Precio, new { @class = "form-control text-end", type = "number", step = "0.00001", min = "0.00001", placeholder = "0.00000" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Precio, "", new { @class = "text-danger" })
                        <div class="form-text">El saldo inicial será igual al precio y el estado quedará <strong>Pendiente</strong>.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-intense">
                            <i class="bi bi-save me-1"></i> Guardar compra
                        </button>
                        <a class="btn btn-outline-light" href="@Url.Action("Index","Consulta")">
                            <i class="bi bi-table"></i> Ver Consulta
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
